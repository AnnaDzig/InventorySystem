@* _LoginPartial.cshtml — Claims-based *@
@using System.Security.Claims

@if (User.Identity.IsAuthenticated)
{
    <div class="d-flex">
        <span class="me-2">Hello, <strong>@User.Identity.Name</strong>!</span>
        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
            <button type="submit" class="btn btn-outline-dark btn-sm">Logout</button>
        </form>
    </div>
}
else
{
    <div class="d-flex">
        <a class="btn btn-outline-dark btn-sm me-2" asp-controller="Account" asp-action="Login">Login</a>
        <a class="btn btn-dark btn-sm" asp-controller="Account" asp-action="Register">Register</a>
    </div>
}
