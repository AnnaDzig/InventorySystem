@model List<InventorySystem.Models.Warehouse>

@{
    ViewData["Title"] = "Warehouses";
}

<h2>📦 Warehouses</h2>

<a asp-action="Create" class="btn btn-success mb-3">➕ Add Warehouse</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var w in Model)
        {
            <tr>
                <td>@w.Name</td>
                <td>@w.Location</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@w.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@w.Id">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>
