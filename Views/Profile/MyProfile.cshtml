@model InventorySystem.Models.User

@{
    ViewData["Title"] = "My Profile";
}

<h2>👤 My Profile</h2>

<div class="card mt-4">
    <div class="card-body">
        <p><strong>First Name:</strong> @Model.FirstName</p>
        <p><strong>Last Name:</strong> @Model.LastName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Role:</strong> @Model.Role</p>
    </div>
</div>
<a asp-action="Edit" class="btn btn-warning mt-3">✏ Edit Profile</a>

<a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-3">← Back to Home</a>

